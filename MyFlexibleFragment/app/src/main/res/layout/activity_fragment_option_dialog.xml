<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_option_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="siapa pelatih tersukses machester united?"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <RadioButton
        android:id="@+id/rg_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <RadioButton
        android:id="@+id/rb_saf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sir alex ferguson"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <RadioButton
        android:id="@+id/rb_mou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jose mourinho"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <RadioButton
        android:id="@+id/rb_lvg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="louis van gaal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <RadioButton
        android:id="@+id/rb_moyes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="david moyes"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Tutup"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Tutup"
        android:layout_marginRight="4dp"/>
    <Button
        android:id="@+id/btn_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Pilih"
        android:layout_marginRight="4dp"/>


    </LinearLayout>
